extends layouts/mainLayout.pug
block content
    main 
        if prods.length >0
            .grid 
                each product in prods 
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product} 
                        .card__image 
                            img(src="https://cdn.pixabay.com/photo/2015/11/19/21/10/glasses-1052010_960_720.jpg", alt="A Book")
                        .card__content 
                            h2.product__price $12.99
                            p.product__description A Very Interesting Book 
                        .card__actions 
                            button.btn Add to cart    
        else 
            h1 No Products  
block styles
    link(rel="stylesheet", href="/css/product.css")



